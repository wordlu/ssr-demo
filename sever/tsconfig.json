{
  "compilerOptions": {
    "target": "ES6", // 或更高版本，如 ES2020
    "module": "node16", // 或 "nodenext"
    "strict": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "moduleResolution": "node16", // 保持与 module 一致
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true // 如果还有库的类型错误，可以加上
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
}
